<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/backgroundColor" android:layout_width="match_parent" android:layout_height="match_parent" android:keepScreenOn="true">
    <RelativeLayout android:padding="10dp" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/big_Text" android:textStyle="bold" android:textColor="@color/text_color_black" android:gravity="center" android:layout_gravity="center" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Updated"/>
            <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <VideoView android:layout_gravity="center" android:id="@+id/videoView" android:layout_width="80dp" android:layout_height="80dp"/>
                <ImageView android:layout_gravity="center" android:id="@+id/imageView" android:layout_width="80dp" android:layout_height="80dp" android:src="@drawable/check_circle_green"/>
            </FrameLayout>
            <TextView android:textSize="@dimen/medium_text" android:textStyle="bold" android:gravity="center" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/updated_successfully"/>
            <Button android:textStyle="bold" android:textColor="#ffffff" android:layout_gravity="center" android:id="@+id/finishButton" android:background="@drawable/click_action" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="20dp" android:text="Home" android:drawableLeft="@drawable/ic_home_black_24dp" android:drawablePadding="5dp" android:textAllCaps="true"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
